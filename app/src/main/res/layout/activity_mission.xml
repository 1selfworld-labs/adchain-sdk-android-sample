<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".mission.MissionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Progress Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/progressCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Top Section with Title and Reward -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Title Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/rewardSection"
                        android:orientation="vertical"
                        android:paddingEnd="16dp">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="무료 포인트 모으기"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <!-- Subtitle -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="간단 광고 참여하고 100 포인트 받기"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>

                    <!-- Reward Section -->
                    <LinearLayout
                        android:id="@+id/rewardSection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Reward Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="보상"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:background="@drawable/reward_label_background"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp" />

                        <!-- 100 Point Badge -->
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/reward_badge_background"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#FFB300" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <!-- Progress Container -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp">

                    <!-- Progress Bar Container -->
                    <LinearLayout
                        android:id="@+id/progressContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="30dp">

                        <!-- Checkbox 1 -->
                        <ImageView
                            android:id="@+id/checkBox1"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_circle_check_empty" />

                        <!-- Progress Line 1 -->
                        <View
                            android:id="@+id/progressLine1"
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_weight="1"
                            android:background="@color/gray_light" />

                        <!-- Checkbox 2 -->
                        <ImageView
                            android:id="@+id/checkBox2"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_circle_check_empty" />

                        <!-- Progress Line 2 -->
                        <View
                            android:id="@+id/progressLine2"
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_weight="1"
                            android:background="@color/gray_light" />

                        <!-- Checkbox 3 -->
                        <ImageView
                            android:id="@+id/checkBox3"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_circle_check_empty" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Mission List Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <!-- Mission List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/missionRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:visibility="gone" />

            <!-- Loading State -->
            <ProgressBar
                android:id="@+id/missionProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
            
            <!-- Reward Button Container (shown when missions completed) -->
            <LinearLayout
                android:id="@+id/rewardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp"
                android:visibility="gone">
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/claimRewardButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="보상 받기"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    android:backgroundTint="@color/primary" />
                    
            </LinearLayout>

            <!-- Empty State Banner -->
            <LinearLayout
                android:id="@+id/missionEmptyBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/rounded_background_blue"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="gone">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="P"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:background="@drawable/circle_background_yellow"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="800만 포인트를\n지금 바로 받아보세요."
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@android:color/white" />

            </LinearLayout>

            <!-- Error State -->
            <LinearLayout
                android:id="@+id/missionErrorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_refresh"
                    app:tint="@color/purple_500"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미션을 불러오지 못했어요."
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/retryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다시 시도"
                    app:cornerRadius="20dp" />

            </LinearLayout>

            <!-- Legacy empty text (hidden) -->
            <TextView
                android:id="@+id/missionEmptyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No missions available"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

</ScrollView>