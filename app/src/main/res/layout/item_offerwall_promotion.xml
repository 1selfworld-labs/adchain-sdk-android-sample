<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/offerwallPromotionContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#F3E5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/gradient_purple_background">

        <!-- Coin Icon -->
        <ImageView
            android:id="@+id/coinIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_coin"
            android:scaleType="centerInside"
            android:contentDescription="@string/coin_icon" />

        <!-- Promotion Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <!-- Promotion Title -->
            <TextView
                android:id="@+id/promotionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800만 포인트 받으러 가기"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Promotion Subtitle -->
            <TextView
                android:id="@+id/promotionSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="더 많은 포인트를 받을 수 있습니다"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:id="@+id/arrowIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            android:scaleType="centerInside"
            app:tint="@android:color/darker_gray"
            android:contentDescription="@string/arrow_icon" />

    </LinearLayout>

</androidx.cardview.widget.CardView>